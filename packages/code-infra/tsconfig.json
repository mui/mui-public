{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "es2020",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./build",
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
