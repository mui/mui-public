{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@mui/internal-docs-infra/*": ["../packages/docs-infra/src/*"],
      "@mui/internal-docs-infra/*/errors": ["../packages/docs-infra/src/*/errors"],
      "@mui/internal-docs-infra/*/types": ["../packages/docs-infra/src/*/types"],
      "@mui/internal-docs-infra/pipeline/*": ["../packages/docs-infra/src/pipeline/*"],
      "@mui/internal-docs-infra/pipeline/*/errors": [
        "../packages/docs-infra/src/pipeline/*/errors"
      ],
      "@mui/internal-docs-infra/pipeline/*/types": ["../packages/docs-infra/src/pipeline/*/types"]
    }
  },
  "references": [
    {
      "path": "../packages/docs-infra/tsconfig.json"
    }
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mdx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
